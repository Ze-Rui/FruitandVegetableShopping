<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/mySeller_goods_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/app_lvjian_rbtn_normal_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mySeller_iv_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/new_img_loading_2" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/mySeller_tv_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="2"
                android:padding="10dp"
                android:text="东西相当不错，赶紧下单就是赚"
                android:textColor="#000" />

            <TextView
                android:id="@+id/mySeller_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                android:text="￥88.00"
                android:textColor="#ff4242" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/mySeller_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除商品"
                android:textSize="10sp"
                android:background="@color/colorAccent"/>

            <Button
                android:id="@+id/mySeller_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改商品"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>